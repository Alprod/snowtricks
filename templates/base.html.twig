<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome! | {% if app.user %} {{ app.user.firstname }} {% else %} Home {% endif %} {% endblock %}</title>

    {% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('js/baseJs') }}
    {% endblock %}

</head>

<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home')}}">SnowTricks</a>
            <ul class="nav justify-content-end text-dark">
                <li class="nav-item">
                    <a class="nav-link text-dark" aria-current="page" href="{{ path('home')}}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{ path('figure') }}">Tricks</a>
                </li>
                {% if not app.user %}
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{ path('app_register')}}">Inscription</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{ path('app_login')}}">Connexion</a>
                </li>
                {% else %}
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{ path('app_logout')}}">Sign out</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </nav>
    <div class="container-xl">

        {% block body %}{% endblock %}
    </div>
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>

</html>