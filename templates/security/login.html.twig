{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    <div class="d-flex flex-column align-items-center">
        <h1 class="h3 mb-4 mt-5 font-weight-normal">Please sign in</h1>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3 alert alert-info" role="alert">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}" class="alert-link">Déconnexion</a>
            </div>
        {% endif %}
        <div class="form-floating mb-3 w-50">
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control {% if error %}is-invalid{% endif %}" required autofocus>
            <label for="inputEmail">Email</label>
        </div>
        <div class="form-floating mb-3 w-50">
            <input type="password" name="password" id="inputPassword" class="form-control {% if error %}is-invalid{% endif %}" required>
            <label for="inputPassword">Password</label>
        </div>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-primary mt-4" type="submit">
            Sign in
        </button>
    </div>
</form>
{% endblock %}
