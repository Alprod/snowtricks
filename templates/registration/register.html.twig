{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="h3 my-5 mb-3 font-weight-normal text-center">Inscription</h1>

    {{ form_start(registrationForm) }}
    <div class="d-flex flex-column align-items-center">
        <div class="w-50 form-floating mb-4">
            {{ form_row(registrationForm.firstname,{
                'attr':{
                    'class': 'form-control'},
                'label': 'Nom',
                'label_attr': {
                    'class': 'mb-0'
                }
            }) }}
       </div>
        <div class="w-50 form-floating mb-4">
            {{ form_row(registrationForm.lastname, {
                'attr':{
                    'class': 'form-control'},
                'label': 'Prénom',
                'label_attr': {
                    'class': 'mb-0 mt-3'
                }
            }) }}
        </div>
        <div class="w-50 form-floating mb-4">
            {{ form_row(registrationForm.pseudo, {
                'attr':{
                    'class': 'form-control'},
                'label': 'Pseudo',
                'label_attr': {
                    'class': 'mb-0 mt-3'
                }
            }) }}

        </div>
        <div class="w-50 form-floating mb-4">
            {{ form_row(registrationForm.email, {
                'attr':{
                    'class': 'form-control'},
                'label': 'Email',
                'label_attr': {
                    'class': 'mb-0 mt-3'
                }
            }) }}
        </div>
        <div class="w-50 form-floating mb-4">
            {{ form_row(registrationForm.password.first, {
                'attr':{
                    'class': 'form-control'},
                'label': 'Mot de passe',
                'label_attr': {
                    'class': 'mb-0 mt-3'
                }
            }) }}
        </div>
        <div class="w-50 form-floating mb-4">
            {{ form_row(registrationForm.password.second, {
                'attr':{
                    'class': 'form-control'},
                'label': 'Répéter le mot de passe',
                'label_attr': {
                    'class': 'mb-0'
                }
            }) }}
        </div>
        {{ form_row(registrationForm.avatar, {
            'attr':{
                'class':'form-control form-control-sm mb-5'},
            'label':'Votre Avatar',
            'label_attr':{'class':'mt-3'}
        })
        }}
        <div class="d-grid gap-2 col-4 mx-auto">
            <button type="submit" class="btn btn-dark mb-5">Enregistrer</button>
        </div>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
