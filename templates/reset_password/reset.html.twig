{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <h1 class="h3 my-5 font-weight-normal text-center">Réinitialisez votre mot de passe</h1>

    {{ form_start(resetForm) }}
    <div class="d-flex flex-column align-items-center">
        <div class="w-50 form-floating mb-4">
            {{ form_widget(resetForm.plainPassword.first, {'attr':{'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
            {{ form_label(resetForm.plainPassword.first, 'Nouveau mot de passe') }}
            <ul class="list-unstyled">
            {% for error in resetForm.plainPassword.first.vars.errors %}
                <li class="text-danger fst-italic fs-6">
                    {{ error.message }}
                </li>
            </ul>
            {% endfor %}
        </div>
        <div class="w-50 form-floating mb-4">
            {{ form_widget(resetForm.plainPassword.second, {'attr':{'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
            {{ form_label(resetForm.plainPassword.second, 'Répéter mot de passe') }}
        </div>

            <button class="btn btn-dark my-3">Réinitialiser le mot de passe</button>
    </div>
    {{ form_end(resetForm) }}
{% endblock %}
