{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError|trans }}</div>
    {% endfor %}
    <h1 class="h3 my-5 font-weight-normal text-center">Réinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
        <div class="d-flex flex-column align-items-center">
            <div class="w-50 form-floating mb-3">
                {{ form_widget(requestForm.email,{'attr':{'name':'email', 'class':'form-control', 'placeholder': 'Votre email'}}) }}
                {{ form_label(requestForm.email, 'Email') }}
                <ul class="list-unstyled">
                    {% for error in requestForm.email.vars.errors %}
                        <li class="text-danger fst-italic fs-6">
                            {{ error.message }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un
                lien pour réinitialiser votre mot de passe
            </small>
        </div>
        <div class="d-grid gap-2 col-4 mx-auto">
            <button class="btn btn-dark mb-5 mt-5">Envoyer un e-mail de réinitialisation du mot de passe</button>
        </div>
    {{ form_end(requestForm) }}
{% endblock %}